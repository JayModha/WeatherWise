<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Weather Wise</title>
  <link rel="stylesheet" href="styles/main.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Oswald:wght@200..700&family=Pixelify+Sans:wght@400..700&family=VT323&display=swap"
    rel="stylesheet">
</head>

<body>
  <div class="maincontainer">
    <div class="navbar">
      <img src="images/fiilogo.png" height="50px" width="80px" alt="Weather Wise Logo" />
      <button id="darkmode">Dark Mode</button>
    </div>

    <div class="maincontent">
      <div class="imgBlock"></div>

      <div class="contentBlock">
        <div class="displayBlock">
          <% if (typeof content==="object" && content.weather) { %>
            <div class="weatherRow">
              <p class="weatherType">
                <%= content.weather[0].main %>
              </p>
              <img class="weatherIcon" src="https://openweathermap.org/img/wn/<%= content.weather[0].icon %>@2x.png"
                alt="Weather Icon" />
              <p class="weatherTemp">
                <%= Math.round(content.main.temp) %>Â°C
              </p>
            </div>
            <% } else { %>
              <p class="weatherBanner">Waiting for API data...</p>
              <% } %>

        </div>

        <form id="myForm" method="post">
          <label for="city">City:</label>
          <input type="text" name="city" id="city" required />

          <label for="state">State (optional):</label>
          <input type="text" name="state" id="state" />

          <label for="country">Country:</label>
          <input type="text" name="country" id="country" required placeholder="e.g. United States" />

          <input type="submit" value="Get Weather" />
        </form>
      </div>
    </div>
  </div>

  <script>
    document.getElementById('darkmode').addEventListener('click', () => {
      document.body.classList.toggle('dark-mode');
      const isDark = document.body.classList.contains('dark-mode');
      localStorage.setItem('darkMode', isDark);
      document.getElementById('darkmode').textContent = isDark ? 'Light Mode' : 'Dark Mode';
    });

    if (localStorage.getItem('darkMode') === 'true') {
      document.body.classList.add('dark-mode');
      document.getElementById('darkmode').textContent = 'Light Mode';
    }
  </script>
</body>

</html>